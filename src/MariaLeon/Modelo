
@startuml

Class UnidadMilitar {
    -String codigo;
    -String nombre;
    -String descripcion;
    -Date fechaCreacion;
    -String direccion;
    -String objetivo;
    -String mision;
    -Soldado soldadoDirigente;
    -List<UnidadMilitar> subUnidades;
}

Class Cuartel {
    -String codigo;
    -String nombre;
    -String direccion;
    -int capacidad;
    -List<UnidadMilitar> unidadesAlojadas;
}

Class Soldado {
    -DocumentoIdentidad documentoIdentidad
    -String codigoMilitar
    -NombreCompleto nombreCompleto
    -Date fechaNacimiento
    -int edad
    -String genero
    -double alturaInicial
    -double pesoInicial
    -String direccion
    -String telefono
    -String email
    -Rango rango
    -CuerpoMilitar cuerpoMilitar
    -Soldado superior
    -List<ContactoEmergencia> contactosEmergencia
}

Class Rango {
    -String codigo
    -String nombre
    -String descripcion
    -String insignia
    -String linea
    -int tiempoMinAscenso
    -List<CriterioAscenso> criteriosAscenso
    -CuerpoMilitar cuerpoMilitar
    -Rango rangoSuperior
}

Class CuerpoMilitar {
    -String codigo
    -String nombre
    -String descripcion
    -String estructuraMando
}

Class DocumentoIdentidad {
    -String numero
    -String tipo
    -Date fechaExpedicion
    -String lugarExpedicion
    -String tipoSangre
}

Class ContactoEmergencia {
    -String numeroIdentificacion
    -String nombre
    -String apellido
    -String genero
    -String email
    -String telefono
    -Date fechaNacimiento
    -String parentesco
}

Class AsignacionComponente {
    -Soldado soldado
    -UnidadMilitar unidadMilitar
    -Date fechaIngreso
    -String oficioInicial
}

Class Labor {
    -String codigo
    -String nombre
    -String descripcion
    -Date fechaAsignacion
    -Date fechaInicio
    -Date fechaFin
    -List<Funcion> funciones
}

Class Funcion {
    -String codigo
    -String nombre
    -String descripcion
    -String procedimiento
}

Class ProgramaEntrenamiento {
    -String codigo
    -String nombre
    -String descripcion
    -List<Actividad> actividades
    -Soldado soldadoResponsable
}

Class Actividad {
    -String codigo
    -String nombre
    -String descripcion
    -String areaAplicacion
    -String tipo
    -List<String> objetivos
    -Soldado soldadoResponsable
    -List<Soldado> instructores
}

Class ActividadEjercicio extends Actividad {
    -String lugarEntrenamiento
    -int cantidadMinimaPracticas
    -String nivelDificultad
    -List<Actividad> ejerciciosPrevios
    -String areaCuerpoHumano
    -double IMCideal
}

Class ActividadFormacion extends Actividad {
    -String tematicaCapacitacion
    -String bibliografia
    -List<String> objetivosAprendizaje
    -List<String> competencias
}

Class Insumo {
    -String codigo
    -String nombreHerramienta
    -String marca
    -String modelo
    -String foto
    -Date fechaAdquisicion
    -String tipo
    -int unidadesAdquiridas
    -double precio
    -String estado
    -boolean esDeConsumo
}

Class ControlInventario {
    -Insumo insumo
    -int cantidadDisponible
    -Date fechaRegistro
}

Class RegistroEntregaInsumo {
    -Soldado soldado
    -Insumo insumo
    -Actividad actividad
    -Date fechaEntrega
    -Date fechaRetorno
}

Class RegistroSalud {
    -Soldado soldado
    -double peso
    -int ritmoCardiaco
    -String condicionSalud
    -Date fechaRegistro
}

Class CriterioAscenso {
    -String codigo
    -String descripcion
    -String tipo
}

' Relaciones

Soldado "1" -- "*" UnidadMilitar : Pertenece >
(Soldado, UnidadMilitar) .. AsignacionComponente

Soldado "1" -- "1" Rango : Tiene 
Soldado "1" -- "1" CuerpoMilitar : Pertenece 
Soldado "1" -- "*" ContactoEmergencia : Tiene 
Soldado "1" -- "*" Labor : Realiza >
Soldado "1" -- "*" Actividad : Participa 
Soldado "1" -- "*" RegistroSalud : Tiene 
UnidadMilitar "1" -- "*" Soldado : Dirigido por 
Rango "1" -- "*" Soldado : Asignado a 
Rango "1" -- "1" CuerpoMilitar : Pertenece a 
CuerpoMilitar "1" -- "*" Rango : Contiene 
CuerpoMilitar "1" -- "*" Soldado : Contiene 
Soldado "1" -- "1" DocumentoIdentidad : Tiene 
Labor "1" -- "*" Funcion : Contiene 
Labor "1" -- "*" Soldado : Asignada a 
Rango "1" -- "*" CriterioAscenso : Define 
ProgramaEntrenamiento "1" -- "*" Actividad : Contiene 
Actividad "1" -- "*" Insumo : Requiere 
Actividad "1" -- "*" Soldado : Participa 
Insumo "1" -- "*" ControlInventario : Registrado en 
Insumo "1" -- "*" RegistroEntregaInsumo : Entregado en 
RegistroEntregaInsumo "1" -- "1" Soldado : Entregado a 
RegistroEntregaInsumo "1" -- "1" Actividad : Para 
Cuartel "1" -- "*" UnidadMilitar : Aloja 

@enduml